@page "/books"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using BookApp.Data
@implements IAsyncDisposable
@inject IDbContextFactory<BookApp.Data.ApplicationDbContext> DbFactory

<PageTitle>Книги</PageTitle>

<div class="books-page">
    <div class="books-container">
        <h1>Книги</h1>

        <div class="actions-header">
            <div style="margin-bottom: 20px;">
                <input @bind="searchTerm"
                       placeholder="Поиск по жанру или автору"
                       class="search-input" />
            </div>
            <AuthorizeView Roles="Administrator">
                <a href="books/create" class="btn btn-primary">Добавить книгу</a>
            </AuthorizeView>
        </div>

        <QuickGrid Class="books-grid" Items="filteredBooks">
            <PropertyColumn Title="Обложка" Property="book => book.ImageFileName" />
            <PropertyColumn Title="Название книги" Property="book => book.Title" />
            <PropertyColumn Title="Автор" Property="book => book.Author" Sortable="true" />
            <PropertyColumn Title="Жанр" Property="book => book.Zhanr" Sortable="true" />
            <PropertyColumn Title="Описание" Property="book => book.Opisanie" />
            <PropertyColumn Title="Цена" Property="book => book.Price" />
            <PropertyColumn Title="Количество на складе" Property="book => book.KolVoNaSklade" />

            <TemplateColumn Context="book">
                <div class="book-actions">
                    <AuthorizeView Roles="Administrator">
                        <a href="@($"books/edit?bookid={book.BookId}")" class="btn btn-outline">Изменить</a>
                    </AuthorizeView>
                    <a href="@($"books/details?bookid={book.BookId}")" class="btn btn-outline">Просмотр</a>
                    <AuthorizeView Roles="Administrator">
                        <a href="@($"books/delete?bookid={book.BookId}")" class="btn btn-outline delete-btn">Удалить</a>
                    </AuthorizeView>
                </div>
            </TemplateColumn>
        </QuickGrid>
    </div>
</div>

<style>
    /* Общие стили для страницы книг */
    .books-page {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 20px;
    }

    /* Стили для контейнера книг */
    .books-container {
        background: white;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        margin-bottom: 40px;
        overflow-x: auto;
    }

    /* Стили для заголовка с кнопками */
    .actions-header {
        margin-bottom: 30px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 20px;
    }

    /* Стили для поля поиска */
    .search-input {
        padding: 8px 12px;
        width: 300px;
        border: 1px solid #e2e8f0;
        border-radius: 6px;
        transition: border-color 0.2s;
    }

        .search-input:focus {
            outline: none;
            border-color: #4299e1;
            box-shadow: 0 0 0 3px rgba(66, 153, 225, 0.1);
        }

    /* Кастомные стили для QuickGrid */
    .custom-grid {
        --grid-header-font-weight: 600;
        --grid-header-color: #2d3748;
        --grid-header-bg: #f8f9fa;
        --grid-row-hover: #f8f9fa;
        --grid-cell-padding: 12px 15px;
        width: 100%;
    }

    /* Стили для кнопок действий */
    .book-actions {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
    }

    /* Общие стили кнопок */
    .btn {
        display: inline-block;
        padding: 8px 12px;
        border-radius: 6px;
        font-size: 0.85rem;
        font-weight: 500;
        text-align: center;
        text-decoration: none;
        cursor: pointer;
        border: 1px solid transparent;
        transition: all 0.2s;
        white-space: nowrap;
    }

    .btn-primary {
        background-color: #4299e1;
        color: white;
    }

        .btn-primary:hover {
            background-color: #3182ce;
        }

    .btn-outline {
        background-color: white;
        border-color: #e2e8f0;
        color: #4a5568;
    }

        .btn-outline:hover {
            background-color: #f8f9fa;
            border-color: #cbd5e0;
        }

        /* Специальный стиль для кнопки удаления */
        .btn-outline.delete-btn {
            color: #e53e3e;
            border-color: #e53e3e;
        }

            .btn-outline.delete-btn:hover {
                background-color: #fff5f5;
            }

    /* Адаптивные стили */
    @@media (max-width: 768px) {
        .books-container {
            padding: 20px;
        }

        .actions-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .search-input {
            width: 100%;
        }

        .book-actions {
            flex-direction: column;
            gap: 5px;
        }

        .custom-grid {
            --grid-cell-padding: 8px 10px;
        }
    }
</style>

@code {
    private ApplicationDbContext context = default!;
    private string searchTerm = string.Empty;
    private IQueryable<Book> allBooks = Enumerable.Empty<Book>().AsQueryable();

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
        allBooks = context.Books.AsQueryable();
    }

    private IQueryable<Book> filteredBooks =>
        string.IsNullOrWhiteSpace(searchTerm)
            ? allBooks
            : allBooks.Where(b =>
                b.Author.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                b.Zhanr.Contains(searchTerm, StringComparison.OrdinalIgnoreCase));

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}