@page "/books/delete"
@attribute [Authorize(Roles = "Administrator")]
@inject NavigationManager NavigationManager
@inject BookService BookService

<PageTitle>Удалить</PageTitle>

<h1>Удалить</h1>

<p>Вы уверены, что хотите удалить книгу?</p>
<div>
    <h2>Book</h2>
    <hr />
    @if (book is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Название</dt>
            <dd class="col-sm-10">@book.Title</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Автор</dt>
            <dd class="col-sm-10">@book.Author</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Жанр</dt>
            <dd class="col-sm-10">@book.Genre</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Описание</dt>
            <dd class="col-sm-10">@book.Description</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Цена</dt>
            <dd class="col-sm-10">@book.Price</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Количество на складе</dt>
            <dd class="col-sm-10">@book.AvailableCount</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Изображение</dt>
            <dd class="col-sm-10">@book.ImageFileName</dd>
        </dl>
        <EditForm method="post" Model="book" OnValidSubmit="DeleteBook" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(book is null)">Удалить</button> |
            <a href="/books">Назад к списку книг</a>
        </EditForm>
    }
</div>

@code {
    private Book? book;

    [SupplyParameterFromQuery]
    private int BookId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        book = await BookService.FindByIdAsync(BookId);

        if (book is null)
            NavigationManager.NavigateTo("notfound");
    }

    private async Task DeleteBook()
    {
        await BookService.DeleteAsync(book!);
        NavigationManager.NavigateTo("/books");
    }
}
